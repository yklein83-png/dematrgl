# ==========================================
# CONFIGURATION BACKEND - FARE EPARGNE
# ==========================================
# INSTRUCTIONS:
# 1. Copier ce fichier vers .env
# 2. Remplacer TOUTES les valeurs marquées "REMPLACER_*"
# 3. NE JAMAIS commiter le fichier .env
# ==========================================

# Environment (development | staging | production)
ENVIRONMENT=development
DEBUG=False

# Application
APP_NAME="Fare Epargne - Gestion Patrimoine"
APP_VERSION="1.0.0"
API_PREFIX="/api/v1"

# ==========================================
# SECURITY - MODIFIER OBLIGATOIREMENT
# ==========================================
# Générer avec: python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=REMPLACER_PAR_CLE_SECRETE_64_CARACTERES_MINIMUM

# JWT Configuration
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ==========================================
# DATABASE - MODIFIER OBLIGATOIREMENT
# ==========================================
# Format: postgresql+asyncpg://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgresql+asyncpg://REMPLACER_USER:REMPLACER_PASSWORD@postgres:5432/fare_epargne
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40
DATABASE_ECHO=False

# ==========================================
# REDIS - MODIFIER OBLIGATOIREMENT
# ==========================================
# Format: redis://:PASSWORD@HOST:PORT/DB
REDIS_URL=redis://:REMPLACER_PASSWORD_REDIS@redis:6379/0
REDIS_TTL_SECONDS=3600

# ==========================================
# CORS - MODIFIER EN PRODUCTION
# ==========================================
# En production, mettre uniquement le domaine de l'application
# Exemple: https://app.fareepargne.pf
CORS_ORIGINS=http://localhost:5173
CORS_ALLOW_CREDENTIALS=True

# ==========================================
# LOGGING
# ==========================================
LOG_LEVEL=INFO
LOG_FILE=/app/logs/fare_epargne.log

# ==========================================
# DOCUMENTS
# ==========================================
DOCX_TEMPLATE_PATH=/app/templates
EXPORT_PATH=/app/exports
MAX_FILE_SIZE_MB=10

# ==========================================
# TIMEZONE (Polynésie Française)
# ==========================================
TIMEZONE=Pacific/Tahiti
